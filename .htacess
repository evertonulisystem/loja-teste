# C:\xampp\htdocs\loja-teste\.htaccess
RewriteEngine On
RewriteBase /loja-teste/

# Remove .php das URLs (opcional)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

